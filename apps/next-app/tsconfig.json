{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "eslint.config.mjs",
    "postcss.config.mjs"
  ],
  "exclude": ["node_modules"]
}
