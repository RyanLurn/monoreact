{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!README.md", "!LICENSE.md"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "type-check": {
      "dependsOn": ["transit"]
    },
    "lint": {
      "dependsOn": ["transit"],
      "outputs": [".eslintcache"]
    },
    "lint-fix": {
      "dependsOn": ["transit"],
      "outputs": [".eslintcache"]
    }
  }
}
